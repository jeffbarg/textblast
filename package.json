{
  "name": "textblast",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-phone-input-2": "^2.10.0",
    "react-phone-number-input": "^2.4.1",
    "react-router-dom": "latest",
    "react-scripts": "3.2.0",
    "react-spinners": "^0.6.1",
    "store": "^2.0.12",
    "tailwindcss-tables": "^0.4.0",
    "twilio": "^3.37.0",
    "userbase-js": "^0.0.5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "autoprefixer": "^9.6.5",
    "netlify-cli": "^2.20.2",
    "netlify-lambda": "^1.6.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-preset-env": "^6.7.0",
    "tailwindcss": "^1.1.2",
    "tailwindcss-transitions": "^2.1.0"
  },
  "scripts": {
    "start": "npm-run-all --parallel watch:css start:react",
    "build": "npm-run-all build:css build:react build:server",
    "build:css": "postcss src/tailwind/styles.css -o src/styles.css",
    "watch:css": "postcss src/tailwind/styles.css -o src/styles.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "build:server": "netlify-lambda build src/functions",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
